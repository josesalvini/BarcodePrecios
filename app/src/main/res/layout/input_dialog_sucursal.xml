<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:padding="10dp">

    <TextView
        android:id="@+id/lblMessageSuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spinner_sucursal"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_gravity="right"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <View
        android:id="@+id/dividerSuc"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorTextHint" />

    <LinearLayout
        android:layout_width="296dp"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewSuc"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/barcode" />

        <RelativeLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/border_spinner"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerSucursales"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginLeft="4dp"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:src="@drawable/arrowspinner" />


        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAceptarSuc"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Aceptar"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>